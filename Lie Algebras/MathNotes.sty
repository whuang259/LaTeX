\RequirePackage{amsmath, amsfonts, amssymb}
\RequirePackage{physics, tensor}
\RequirePackage{mathtools, latexsym}
\RequirePackage{graphicx, parskip}

% ===================
% Formatting
% ===================
\RequirePackage[margin=1in]{geometry}
\RequirePackage{fancyhdr, enumitem} 
\pagestyle{fancy}
\setlength{\headheight}{15pt}
\setlength{\parindent}{0pt}

% ===================
% Custom environments
% ===================
\RequirePackage{amsthm, thmtools, mdframed, xcolor}
\mdfsetup{skipabove=\topskip, skipbelow=\topskip}
\mdfdefinestyle{theoremstyle}{
	linewidth=1pt,
	frametitlerule=true,
	frametitlebackgroundcolor=gray!20,
	innertopmargin=\topskip
}
\mdtheorem[style=theoremstyle]{theorem}{Theorem}[section]
\mdtheorem[style=theoremstyle]{lemma}[theorem]{Lemma}
\mdtheorem[style=theoremstyle]{corollary}[theorem]{Corollary}
\mdtheorem[style=theoremstyle]{proposition}[theorem]{Proposition}

\mdtheorem[style=theoremstyle]{definition}{Definition}[section]

\declaretheoremstyle[
    spaceabove=12pt,
    spacebelow=12pt,
    numbered=no
]{example}
\declaretheorem[style=example]{example}

\declaretheoremstyle[
    spaceabove=12pt,
    spacebelow=12pt
]{exercise}
\declaretheorem[style=exercise]{exercise}

